<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/esce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".escolas.Esce">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos ESCE"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="7dp"/>

        <View
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relativeLayout_1"
        android:layout_below="@id/l1"
        android:layout_marginVertical="30dp"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <TextView
            android:id="@+id/cf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="cfClick"
            android:padding="10dp"
            android:text="Contabilidade e Fiscalidade"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/gdl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="gdlClick"
            android:padding="10dp"
            android:text="Gestão da Distribuição e Logística"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="mceClick"
            android:padding="10dp"
            android:text="Marketing e Comunicação Empresarial"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/oge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="ogeClick"
            android:padding="10dp"
            android:text="Organização e Gestão de Empresariais"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Selecione um curso para mais informações"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>