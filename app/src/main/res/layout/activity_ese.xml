<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ese"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".escolas.Ese">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos ESE"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="7dp"/>

        <View
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relativeLayout_1"
        android:layout_below="@id/l1"
        android:layout_marginVertical="30dp"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <TextView
            android:id="@+id/acd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="acdAClick"
            android:padding="10dp"
            android:text="Artes e Cinema Digital"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/apta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="aptaClick"
            android:padding="10dp"
            android:text="Artes Plásticas e Tecnologias Artísticas"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/eb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="ebClick"
            android:padding="10dp"
            android:text="Educação Básica"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/esg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:onClick="esgClick"
            android:padding="10dp"
            android:text="Educação Social Gerontológica"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Selecione um curso para mais informações"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>