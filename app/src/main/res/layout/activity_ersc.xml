<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ersc"
    tools:context=".cursos.Ersc">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tw1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Estágios"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="7dp"/>

        <View
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:layout_marginHorizontal="50dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/wesecure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="secureClick"
            android:padding="10dp"
            android:text="WeSecure"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/eurotux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="eurotuxClick"
            android:padding="10dp"
            android:text="EuroTux"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/microDi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="microClick"
            android:padding="10dp"
            android:text="Micro Di"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Accenture_Technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="AccentureClick"
            android:padding="10dp"
            android:text="Accenture Technology"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Chip7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="chipClick"
            android:padding="10dp"
            android:text="Chip7"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Blip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="BlipClick"
            android:padding="10dp"
            android:text="Blip"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Primavera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="PrimaveraClick"
            android:padding="10dp"
            android:text="Primavera"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Bosch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="BoschClick"
            android:padding="10dp"
            android:text="Bosch"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Selecione um curso para mais informações"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>